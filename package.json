{
  "name": "playground",
  "version": "1.0.0",
  "description": "my playground",
  "main": "index.js",
  "scripts": {
    "-------DEVELOPMENT": "",
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server --port=4300 --browser=chrome",
    "START": "npm-run-all --parallel devserver watch:sass",
    "-------BUILD": "",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "prefix:scc": "postcss --use autoprefixer -b \"last 5 versions\" css/style.comp.css -o css/style.prefix.css",
    "compress:scc": "node-sass  css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:scc compress:scc"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "concat": "^1.0.3",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0"
  },
  "dependencies": {}
}
